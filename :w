#include "ft_printf.h"

int	ft_printf(const char *fmt, ...)
{
	va_list	list;
	int		l;
	int i = 1;
	char *str;
	char *tmp;

	l = 0;
	va_start(list, fmt);
	while (*fmt != 0 && i)
	{
		if (*fmt == '%' && *(fmt + 1) != '%')
		{
			tmp = print_arg(&fmt, &list, &l);
			ft_strcon(str, tmp, l);
		}
		else if (*fmt == '%' && *(fmt + 1) == '%')
		{
			ft_putchar('%');
			fmt += 2;
			l++;
		}
		else
		{
			l++;
			ft_putchar(*fmt);
			fmt++;
		}
	}
	va_end(list);
	return (l);
}
